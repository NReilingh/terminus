{
  "name": "pantheon-systems/terminus",
  "description": "A command line interface for Pantheon",
  "keywords": [
    "cli",
    "pantheon",
    "terminus",
    "drupal",
    "wordpress"
  ],
  "homepage": "https://pantheon.io",
  "license": "MIT",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "composer/composer": "^2",
    "composer/semver": "^3",
    "consolidation/comments": "^1.0.2",
    "consolidation/filter-via-dot-access-data": "^1.0",
    "consolidation/output-formatters": "^4",
    "consolidation/robo": "^3",
    "consolidation/site-alias": "^3.1",
    "czproject/git-php": "^4.0",
    "guzzlehttp/guzzle": "^6.2",
    "justinrainbow/json-schema": "^5.2",
    "monolog/monolog": "^2.2",
    "rogervila/array-diff-multidimensional": "^2.0",
    "symfony/console": "^5",
    "symfony/finder": "^5",
    "symfony/process": "^5",
    "symfony/yaml": "^5",
    "tm/tooly-composer-script": "^1.4"
  },
  "require-dev": {
    "behat/behat": "^3.2.2",
    "kint-php/kint": "^3.3",
    "php-coveralls/php-coveralls": "^2.1",
    "php-vcr/php-vcr": "^1.4",
    "phpunit/phpunit": "^7",
    "psy/psysh": "^0.10.8",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Pantheon\\Terminus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pantheon\\Terminus\\Tests\\Functional\\": "tests/Functional/"
    },
    "classmap": [
      "scripts/UpdateClassLists.php"
    ]
  },
  "bin": [
    "bin/t3"
  ],
  "scripts": {
    "phar:build": [
      "rm -Rf ./t3",
      "vendor/bin/phar-composer.phar build .",
      "mv terminus.phar t3",
      "chmod +x t3"
    ],
    "phar:install": [
      "touch /usr/local/bin/t3",
      "rm -rf /usr/local/bin/t3 || true",
      "ln -s `realpath ./t3` /usr/local/bin/t3"
    ],
    "phar:update": [
      "@phar:build",
      "@phar:install"
    ],
    "update-class-lists": [
      "\\Terminus\\UpdateClassLists::update"
    ],
    "code:fix": [
      "phpcbf --standard=tests/config/linting_ruleset.xml bin/t3 src/*"
    ],
    "code:lint": [
      "@cs"
    ],
    "code:new-command": [
      "rm -Rf ~/.terminus/cache/commands || true",
      "@update-class-lists",
      "bin/t3 self:clear-cache"
    ],
    "code:setup-precommit": [
      "bash scripts/setup-precommit.sh"
    ],
    "test:behat": [
      "SHELL_INTERACTIVE=true behat --colors --config tests/config/behat.yml --suite=default"
    ],
    "test": [
      "@phar:build",
      "@functional"
    ],
    "clover": [
      "phpunit -c tests/config/phpunit.xml.dist --coverage-clover tests/logs/clover.xml"
    ],
    "coveralls": [
      "php vendor/bin/php-coveralls -v -c tests/config/coveralls.yml"
    ],
    "cs": [
      "phpcs --standard=tests/config/linting_ruleset.xml bin/t3 src"
    ],
    "docs": [
      "php scripts/make-docs.php"
    ],
    "phpunit": [
      "@functional"
    ],
    "functional": [
      "phpunit --colors=always -c tests/config/functional.phpunit.xml.dist --debug"
    ],
    "post-install-cmd": [
      "Tooly\\ScriptHandler::installPharTools"
    ],
    "post-update-cmd": [
      "Tooly\\ScriptHandler::installPharTools"
    ],
    "pre-commit": [
      "@code:fix",
      "@code:lint",
      "composer validate --strict"
    ]
  },
  "config": {
    "process-timeout": 3600,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "7.4"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    },
    "kint": {
      "disable-helpers": true,
      "depth-limit": 3
    },
    "tools": {
      "phar-composer": {
        "url": "https://clue.engineering/phar-composer-latest.phar",
        "dev-only": true
      }
    }
  }
}
