<phpunit
  bootstrap="../FunctionalTests/bootstrap.php"
  colors="true"
  >
  <testsuites>
    <testsuite>
      <directory suffix="Test.php">../FunctionalTests/</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist>
        <directory suffix=".php">../../src/</directory>
        <exclude>
            <directory suffix=".php">../../vendor/</directory>
        </exclude>
    </whitelist>
  </filter>
</phpunit>
